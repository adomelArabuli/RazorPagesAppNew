@page
@model PizzaShop.Pages.Account.ResetPasswordModel
@{
}
<h1 class="text-info">Reset Password</h1>
<form asp-page="ResetPassword" method="post" role="form">
	<h4>Reset your password</h4>
	<hr />
	<div asp-validation-summary="All" class="text-danger"></div>
	<input asp-for="Input.Code" hidden />
	<div class="form-group">
		<label asp-for="Input.Email" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Input.Email" class="form-control" />
			<span asp-validation-for="Input.Email" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mt-3">
		<label asp-for="Input.Password" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Input.Password" class="form-control" />
			<span asp-validation-for="Input.Password" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mt-3">
		<label asp-for="Input.ConfirmPassword" class="col-md-2"></label>
		<div class="col-md-10">
			<input asp-for="Input.ConfirmPassword" class="form-control" />
			<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group mt-3">
		<div class="col-md-2">
			<button type="submit" class="btn btn-success form-control">Reset</button>
		</div>
	</div>
</form>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}