@page
@using PizzaShop.Pages;
@model IndexModel
@{
    ViewData["Title"] = "Home";
}


<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShopApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RazorPagesApp.styles.css" asp-append-version="true" />
</head>
    <body class="black-bg">
        <div class="text-center bg-black" style="height: 100vh;">
            <div class="mainText">
                <h1 class="display-4 text-capitalize text-white1" style="color:yellow;">Welcome to the pizza shop</h1>
            <h1 class="mainSubTitle">You can taste the most delicious pizza here</h1>
            </div>
            <img class="mainImage" src="~/Images/pizza.png" />
            <br />
            <a class="btn btn-warning btn-lg font-weight-bold mt-1" asp-page="Checkout/ThankYou">Bring that pizza</a>

        </div>
    </body>